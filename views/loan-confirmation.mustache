<div class="flex flex-col min-h-screen">
  <!-- Header -->
  <header class="py-4 border-b border-white/20">
    <div class="flex items-center gap-4">
      <div class="w-24">
        <img src="/images/library-logo.png" alt="Hobby Library" class="w-full">
      </div>
      <h1 class="text-4xl font-bold text-white">Welcome to the Hobby Library!</h1>
    </div>
  </header>

  <!-- Navigation and Search -->
  <nav class="bg-secondary/80 rounded-md mt-4 p-3">
    <div class="flex items-center justify-between">
      <div class="flex-1 max-w-md">
        <div class="relative">
          <input type="text" placeholder="Search" class="w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary">
          <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      </div>
      <div class="flex gap-8 text-black font-medium">
        <a href="/knitting" class="hover:underline">Knitting</a>
        <a href="/crocheting" class="hover:underline">Crocheting</a>
        <a href="/painting" class="hover:underline">Painting</a>
        <a href="/login" class="hover:underline">Login</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="flex flex-1 mt-4">
    <div class="w-full max-w-3xl mx-auto bg-white rounded-md overflow-hidden">
      <div class="p-6">
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-800">Loan Request Confirmed!</h1>
          <p class="text-gray-600 mt-1">Your loan request has been successfully processed.</p>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-6 mb-6">
          <h2 class="text-lg font-semibold text-gray-700 mb-4">Loan Details</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
            <div>
              <h3 class="text-sm font-medium text-gray-500">Loan Reference</h3>
              <p class="mt-1 text-md text-gray-900 font-semibold">{{loan.referenceNumber}}</p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Status</h3>
              <span class="mt-1 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Confirmed
              </span>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Pickup Date</h3>
              <p class="mt-1 text-md text-gray-900">{{loan.pickupDate}}</p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Expected Return Date</h3>
              <p class="mt-1 text-md text-gray-900">{{loan.returnDate}}</p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Pickup Location</h3>
              <p class="mt-1 text-md text-gray-900">{{loan.pickupLocation}}</p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Deposit Amount</h3>
              <p class="mt-1 text-md text-gray-900">${{loan.depositAmount}}</p>
            </div>
          </div>
        </div>
        
        <div class="mb-6 border rounded-lg overflow-hidden">
          <div class="bg-gray-50 px-4 py-3">
            <h2 class="text-lg font-semibold text-gray-700">Item Details</h2>
          </div>
          
          <div class="p-4">
            <div class="flex items-center">
              <div class="h-16 w-16 flex-shrink-0">
                <img class="h-16 w-16 rounded-md object-cover" src="{{loan.equipment.imageUrl}}" alt="{{loan.equipment.name}}">
              </div>
              <div class="ml-4 flex-1">
                <h3 class="text-lg font-medium text-gray-900">{{loan.equipment.name}}</h3>
                <p class="text-sm text-gray-500">{{loan.equipment.category}} â€¢ {{loan.equipment.skillLevel}}</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Important Information</h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p>
                  Please bring your ID when picking up the equipment. Your deposit will be refunded when you return the item in good condition.
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex justify-center space-x-4">
          <a href="/my-loans" class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary/80 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
            View My Loans
          </a>
          <a href="/" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Message -->
  <div class="mt-4 mb-4 bg-secondary/80 rounded-md p-4 text-center">
    <p class="text-black">
      Thank you for using the Hobby Library! We hope you enjoy your borrowed items.
      Remember to return them on time to avoid any late fees.
    </p>
  </div>
</div>
