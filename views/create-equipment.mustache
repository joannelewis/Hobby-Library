  </div>

  <!-- Create Equipment Form -->
  <div class="flex-1 bg-white rounded-md p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Add New Equipment</h2>
    
    <form action="/admin/create-equipment" method="POST" enctype="multipart/form-data">
      <!-- Basic Information -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Basic Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
              Equipment Name *
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
              id="name"
              name="name"
              type="text"
              placeholder="e.g., Bamboo Knitting Needles Set"
              required
            >
          </div>
          
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="category">
              Category *
            </label>
            <select
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
              id="category"
              name="category"
              required
            >
              <option value="" disabled selected>Select a category</option>
              {{#categories}}
                <option value="{{id}}">{{name}}</option>
              {{/categories}}
              {{^categories}}
                <option value="knitting">Knitting</option>
                <option value="crocheting">Crocheting</option>
                <option value="painting">Painting</option>
                <option value="other">Other</option>
              {{/categories}}
            </select>
          </div>
        </div>
      </div>
      
      <!-- Details -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Equipment Details</h3>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="description">
            Description *
          </label>
          <textarea
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
            id="description"
            name="description"
            rows="4"
            placeholder="Describe the equipment and its condition..."
            required
          ></textarea>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">                   
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="quantity">
              Quantity Available *
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
              id="quantity"
              name="quantity"
              type="number"
              min="1"
              value="1"
              required
            >
          </div>
        </div>
      </div>
      
      <!-- Image Upload -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Equipment Image</h3>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="image">
            Upload Image
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
            id="image"
            name="image"
            type="file"
            accept="image/*"
          >
          <p class="text-sm text-gray-500 mt-1">Recommended size: 800x600px. Max file size: 5MB</p>
        </div>
      </div>
      
      <!-- Additional Details -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Additional Details</h3>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="loanPeriod">
            Loan Period (Days)
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
            id="loanPeriod"
            name="loanPeriod"
            type="number"
            min="1"
            value="14"
          >
        </div>
                
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="notes">
            Staff Notes (Not visible to users)
          </label>
          <textarea
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-primary"
            id="notes"
            name="notes"
            rows="2"
            placeholder="Any additional notes for staff..."
          ></textarea>
        </div>
      </div>
      
      <!-- Form Actions -->
      <div class="flex justify-end space-x-4">
        <a href="/admin/manage-equipment" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
          Cancel
        </a>
        <button
          type="submit"
          class="px-4 py-2 bg-primary text-white rounded-md hover:bg-primary/80 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
        >
          Create Equipment
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Footer Message -->
<div class="mt-4 mb-4 bg-secondary/80 rounded-md p-4 text-center">
  <p class="text-black">
    Adding new equipment to the Hobby Library helps our users explore their creative interests!
    Make sure to provide detailed information to help users find what they need.
  </p>
</div>