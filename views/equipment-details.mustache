<div class="flex flex-col min-h-screen">
  <!-- Header -->
  <header class="py-4 border-b border-white/20">
    <div class="flex items-center gap-4">
      <div class="w-24">
        <img src="/images/library-logo.png" alt="Hobby Library" class="w-full">
      </div>
      <h1 class="text-4xl font-bold text-white">Welcome to the Hobby Library!</h1>
    </div>
  </header>

  <!-- Navigation and Search -->
  <nav class="bg-secondary/80 rounded-md mt-4 p-3">
    <div class="flex items-center justify-between">
      <div class="flex-1 max-w-md">
        <div class="relative">
          <input type="text" placeholder="Search" class="w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary">
          <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      </div>
      <div class="flex gap-8 text-black font-medium">
        <a href="/knitting" class="hover:underline">Knitting</a>
        <a href="/crocheting" class="hover:underline">Crocheting</a>
        <a href="/painting" class="hover:underline">Painting</a>
        <a href="/login" class="hover:underline">Login</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="flex flex-1 mt-4 gap-4">
    <!-- Sidebar with Related Items -->
    <div class="w-64 bg-secondary/80 rounded-md p-4">
      <h2 class="text-xl font-bold mb-4">Related Equipment</h2>
      
      {{#relatedEquipment}}
      <a href="/equipment/{{id}}" class="block mb-4 hover:opacity-90 transition-opacity">
        <div class="bg-white rounded-md overflow-hidden shadow-sm">
          <img src="{{imageUrl}}" alt="{{name}}" class="w-full h-32 object-cover">
          <div class="p-2">
            <h3 class="font-semibold text-gray-800 truncate">{{name}}</h3>
            <div class="flex justify-between items-center mt-1">
              <span class="text-xs bg-gray-100 px-2 py-1 rounded">{{skillLevel}}</span>
              {{#available}}
              <span class="text-xs text-green-600">Available</span>
              {{/available}}
              {{^available}}
              <span class="text-xs text-red-600">Unavailable</span>
              {{/available}}
            </div>
          </div>
        </div>
      </a>
      {{/relatedEquipment}}
      
      {{^relatedEquipment}}
      <p class="text-gray-600 text-sm">No related equipment found.</p>
      {{/relatedEquipment}}
      
      <a href="/category/{{equipment.category}}" class="block mt-4 text-primary hover:underline text-center">
        View all {{equipment.category}} equipment
      </a>
    </div>

    <!-- Equipment Details -->
    <div class="flex-1 bg-white rounded-md overflow-hidden">
      <div class="h-64 bg-gray-200 relative">
        <img src="{{equipment.imageUrl}}" alt="{{equipment.name}}" class="w-full h-full object-cover">
        
        {{#equipment.available}}
        <div class="absolute top-4 right-4">
          <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm">Available</span>
        </div>
        {{/equipment.available}}
        
        {{^equipment.available}}
        <div class="absolute top-4 right-4">
          <span class="bg-red-500 text-white px-3 py-1 rounded-full text-sm">Currently Unavailable</span>
        </div>
        {{/equipment.available}}
      </div>
      
      <div class="p-6">
        <div class="flex flex-wrap justify-between items-start mb-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-800">{{equipment.name}}</h1>
            <div class="flex items-center gap-2 mt-1">
              <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm">{{equipment.category}}</span>
              <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm">{{equipment.skillLevel}}</span>
              <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm">
                Location: {{equipment.location}}
              </span>
            </div>
          </div>
          
          {{#equipment.available}}
          <form action="/equipment/{{equipment.id}}/request" method="POST">
            <button type="submit" class="bg-primary hover:bg-primary/80 text-white px-6 py-3 rounded-md font-semibold transition-colors">
              Request to Borrow
            </button>
          </form>
          {{/equipment.available}}
          
          {{^equipment.available}}
          <button disabled class="bg-gray-300 text-gray-500 px-6 py-3 rounded-md font-semibold cursor-not-allowed">
            Unavailable
          </button>
          {{/equipment.available}}
        </div>
        
        <div class="border-t border-gray-200 pt-4">
          <h2 class="text-xl font-bold text-gray-800 mb-2">Description</h2>
          <p class="text-gray-700">{{equipment.description}}</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-6 border-t border-gray-200 pt-4">
          <div>
            <h3 class="font-semibold text-gray-700">Loan Period</h3>
            <p>{{equipment.loanPeriod}} days</p>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-700">Deposit Required</h3>
            <p>${{equipment.depositAmount}}</p>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-700">Condition</h3>
            <p>{{equipment.condition}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Message -->
  <div class="mt-4 mb-4 bg-secondary/80 rounded-md p-4 text-center">
    <p class="text-black">
      {{#equipment.available}}
      Ready to try something new? Click "Request to Borrow" to start your creative journey!
      {{/equipment.available}}
      {{^equipment.available}}
      This item is currently unavailable. Check back soon or explore other similar items.
      {{/equipment.available}}
    </p>
  </div>
</div>
